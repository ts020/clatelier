{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [
			"**/dist/**",
			"**/node_modules/**",
			"**/test-results/**",
			"**/*.md"
		]
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": { "recommended": true }
	},
	"formatter": {
		"enabled": true
	}
}
